@model IEnumerable<CalidadSoftware.Models.users>

@{
    ViewBag.Title = "Index";
    var numero = Model.Count();
}

<h2 class="page-header">Lista de Usuarios <small>@numero usuarios registrados</small></h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.privilege_level)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.privilege_level)
            </td>
            <td>
                @Html.ActionLink("Editr", "Edit", new { id = item.id_user }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id_user }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_user })
            </td>
        </tr>
    }

</table>
